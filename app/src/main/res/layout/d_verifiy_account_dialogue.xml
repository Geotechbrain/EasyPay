<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView
            android:id="@+id/verify_dialogue_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/icon_verify" />

        <TextView
            android:id="@+id/verify_dialogue_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Verify your email"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/verify_dialogue_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Please check your email, we have sent you a link to verify your email address. It might take little time to arrive , please be patient"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/verify_dialogue_ok"
            android:layout_width="wrap_content"
            android:background="@color/colorPrimary"
            android:text="Ok"
            android:layout_marginTop="15dp"
            android:textColor="@color/white"
            android:paddingEnd="30dp"
            android:paddingStart="30dp"
            android:layout_gravity="center_horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_height="wrap_content" />


    </LinearLayout>

</androidx.cardview.widget.CardView>