<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15dp"
    android:orientation="vertical"
    android:padding="15dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/emoji_success" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:gravity="center_horizontal"
            android:text="Transaction successful"
            android:textColor="@color/black"
            android:textSize="25sp" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/icon_successful" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/transaction_success_dialogue_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TOKEN: "
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/transaction_success_dialogue_token"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <ImageView
            android:id="@+id/transaction_success_dialogue_copyToken"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/icon_copy" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/transaction_success_dialogue_cancel"
        android:layout_width="match_parent"
        android:layout_margin="30dp"
        android:padding="20dp"
        android:text="Cancel"
        android:layout_height="wrap_content" />

</LinearLayout>